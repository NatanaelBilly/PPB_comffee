<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_item">

        <ImageView
            android:id="@+id/cartFnbPic"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/kopi"/>

        <TextView
            android:id="@+id/item_nama"
            android:paddingLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kopi arabica"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <!--        android:layout_toRightOf="@+id/item_pic"-->
        <TextView
            android:id="@+id/item_description"
            android:paddingLeft="100dp"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/item_price"
            android:paddingLeft="100dp"
            android:paddingTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 20000"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/tambahin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_logo"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/tambahin"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="5"
            android:layout_centerVertical="true"
            android:textColor="@color/white" />
        <!--        android:layout_alignBottom="@+id/cartFnbPic"-->
        <!--        android:layout_toRightOf="@+id/cartFnbPic"-->

        <ImageView
            android:id="@+id/kurangin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/item_quantity"
            android:src="@drawable/reduce_logo"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/remove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/kurangin"
            android:src="@drawable/remove_logo"
            android:layout_centerVertical="true" />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_pemisah_item"/>
</LinearLayout>